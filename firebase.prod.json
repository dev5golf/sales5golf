{
    "hosting": {
        "public": "out",
        "ignore": [
            "firebase.json",
            "firebase.dev.json",
            "firebase.staging.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/admin",
                "destination": "/admin.html"
            },
            {
                "source": "/list",
                "destination": "/list.html"
            },
            {
                "source": "/detail",
                "destination": "/detail.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            }
        ]
    }
}